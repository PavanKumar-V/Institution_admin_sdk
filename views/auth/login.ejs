<%- include('../includes/head.ejs') %>

  <div class="container">
    <div class="auth card rounded p14">
      <h4 class="bl m-b" id="form-title">Login</h4>
      <!-- login -->
      <form method="post" id="login-form">
        <div class="form-input">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </div>
        <div class="form-input">
          <label for="">Email</label>
          <input type="email" name="email" id="" required />
        </div>
        <div class="form-input m-b">
          <label for="">Password</label>
          <input type="password" name="password" id="" required />
        </div>
        <div>
          <a id="forgot-password-btn" style="cursor: pointer">forgot password</a>
        </div>
        <button type="submit" class="btnn m-t">
          <%- include('../constants/btnloader.ejs') %>
            Login
        </button>
      </form>
      <!-- Password reset -->
      <form method="post" class="display-flex" id="password-reset" style="display: none">
        <div class="form-input">
          <label for="">Email</label>
          <input type="email" name="email" id="" required />
        </div>
        <br />
        <a class="m-b" style="cursor: pointer" id="back-login-btn">login</a> <br>
        <button type="submit" class="btnn m-t">
          <div class="btn-loader" style="justify-content: center"></div>
          Send reset password link
        </button>
      </form>
    </div>
  </div>

  <%- include('../includes/footer.ejs') %>